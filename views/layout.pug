doctype html
html(lang="en-us")
  head
    if title
      title= title
    else
      title CardaWorlds
    // Meta tags
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=Edge")
    meta(name="format-detection", content="telephone=no")
    meta(name="msapplication-TileColor", content="#9d79bc")
    meta(name="theme-color", content="#9d79bc")
    meta(name="description", content="CardaWorlds are a series of fun, unique worlds generated by our custom algorithm. Check out the extensive list of fantasy worlds and get your own!")
    meta(property="og:image" content="httsp://cardaworlds.io/img/cardaworlds.png")
    link(rel="canonical", href="https://cardaworlds.io/")
    meta(property="og:locale", content="en_US")
    meta(property="og:type", content="website")
    meta(property="og:title", content="CardaWorlds")
    meta(property="og:description", content="CardaWorlds are a series of fun, unique worlds generated by our custom algorithm. Check out the extensive list of fantasy worlds and get your own!")
    meta(property="og:url", content="https://cardaworlds.io/")
    meta(property="og:site_name", content="CardaWorlds")
    link(rel="shortlink", href="https://cardaworlds.io/")
    // Links
    link(rel="preconnect", href="/stylesheets/style.css")
    link(rel="stylesheet", href="/stylesheets/style.css", async)
    link(rel="apple-touch-icon", href="/img/favicon.ico")
    link(rel="icon", type="image/ico", href="/img/favicon.ico")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(
      href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap",
      rel="stylesheet",
      defer
    )
    noscript
      link(
        rel="stylesheet",
        media="all",
        href="/stylesheets/noscript.css",
        defer
      )
    // Viewport relativity
    meta(name="viewport", content="width=device-width, initial-scale=1")
  body
    include includes/header

    .content
      block content

    .vr
      include includes/footer
